<Window x:Class="Showroom.Views.Other.CalculatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Showroom.Views.Other"
        mc:Ignorable="d"
        Title="CalculatingWindow" Height="350" Width="350">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter first payment"/>
            <TextBox Name="InitialPaymentTextBox"/>
            <TextBlock Text="Enter loan date (max 60 month):"/>
            <TextBox Name="LoanTermTextBox"/>
            <Button Content="Calculate" Click="CalculateButton_Click"/>
            <TextBlock Name="ResultTextBlock" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
