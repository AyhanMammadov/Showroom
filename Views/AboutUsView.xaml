<UserControl x:Class="Showroom.Views.AboutUsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Showroom.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="PapayaWhip">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="300"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Brief information about Performance Center" Foreground="Black" HorizontalAlignment="Center"
                   FontSize="35" FontWeight="DemiBold" FontStyle="Italic" Margin="0 20 0 0"/>
            <Image Grid.Row="1" Source="https://performance-center.az/frontend/web/uploads//images/X55II/IMG-20230517-WA0068.jpg"
                   Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality"/>
            <TextBlock Text ="{Binding AboutUsInfo}" Grid.Row="2" TextWrapping="Wrap" Foreground="Black" 
                       FontSize="30" FontWeight="Light" Margin="0 20 0 0"/>
        </Grid>
    </ScrollViewer>
</UserControl>
